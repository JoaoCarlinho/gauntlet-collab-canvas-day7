{
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 30,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  },
  "environments": {
    "preview": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "NPM_CONFIG_PREFER_OFFLINE": "true",
        "NPM_CONFIG_AUDIT": "false"
      }
    },
    "production": {
      "variables": {
        "NODE_ENV": "production",
        "PORT": "3000",
        "NPM_CONFIG_PREFER_OFFLINE": "true",
        "NPM_CONFIG_AUDIT": "false"
      }
    }
  }
}
