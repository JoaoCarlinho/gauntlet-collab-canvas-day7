# Railway Environment Variables Template
# Copy these to your Railway service environment variables
# Docker-free deployment configuration

# API Configuration
VITE_API_URL=https://gauntlet-collab-canvas-day7-production.up.railway.app
VITE_SOCKET_URL=https://gauntlet-collab-canvas-day7-production.up.railway.app

# Environment
NODE_ENV=production
PORT=3000

# Build Configuration
VITE_BUILD_TARGET=production
VITE_APP_NAME=CollabCanvas

# NPM Configuration for Railway (Docker-free deployment)
NPM_CONFIG_PREFER_OFFLINE=true
NPM_CONFIG_AUDIT=false
NPM_CONFIG_FUND=false
NPM_CONFIG_UPDATE_NOTIFIER=false
NPM_CONFIG_PROGRESS=false
NPM_CONFIG_CACHE_MAX=0

# Node.js optimization
NODE_OPTIONS=--max-old-space-size=4096

# Build optimization
CI=true
DISABLE_ESLINT_PLUGIN=true
GENERATE_SOURCEMAP=false

# Health check configuration (disabled for faster builds)
DISABLE_HEALTH_CHECKS=true
SKIP_HEALTH_MONITORING=true
HEALTH_CHECK_ENABLED=false

# Firebase Configuration (if using Firebase)
# VITE_FIREBASE_API_KEY=your_firebase_api_key
# VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
# VITE_FIREBASE_PROJECT_ID=your_firebase_project_id

# Optional: Custom domain (if you set one up)
# VITE_APP_URL=https://your-custom-domain.com
